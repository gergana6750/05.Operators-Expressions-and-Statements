using System;

    class DivideBy7And5
    {
        static void Main()
        {
            Console.WriteLine("Enter an integer number: ");
            int num = int.Parse(Console.ReadLine());
            bool checkNum7 = num % 7 == 0;
            bool checkNum5 = num % 5 == 0;

            if (num == 0)
            {
                checkNum7 = false;
            }
            Console.WriteLine("Number divided by 7 and 5 without remainder? {0}", checkNum7 && checkNum5);
        }
    }

